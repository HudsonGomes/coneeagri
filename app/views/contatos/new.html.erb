<div class="container">
  <div class="row">
        <% flash.each do |key, value| %>
          <div>
            <a href="#" data-dismiss="alert">×</a>
            <%= value %>
          </div>
        <% end %>
    <h1>Contato</h1>
    <div class="divider"></div>
    <div>
      <p>Caso tenha qualquer dúvida, você pode entrar em contato conosco. Basta usar o formulário abaixo ou enviar um email para contat@coneeagri.com.br</p>
    </div>
    <div class="row">
      <div class="col s12">
      <%= simple_form_for @contato, :html => {:class => 'form-horizontal' } do |f| %>
        <%= f.input :nome, :required => true %>
        <%= f.input :email, :required => true %>
        <%= f.input :mensagem, :as => :text, :required => true %>
        <div class= "hidden">
          <%= f.input :apelido, :hint => 'Leave this field blank!' %>
        </div>
        <div>
          </br>
          <%= f.button :submit, 'Enviar', class: 'btn' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>